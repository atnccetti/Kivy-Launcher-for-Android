                str(password_alias.text), str(password_key.text), str(validade.text), str(caminho_key.text)]

                #print app.par_creatkey
                root.clean()



<PopKey_2>:
    name:"popkey_2"
    BoxLayout:
        orientation: "vertical"

        Label:
            size_hint_y: .05
        Label:
            text: "What is your first and last name?"
        TextBase:
            id:nome
            hint_text:"example: <Homer Simpson>"

        Lb_space:
        Label:
            text: "What is the name of your organizational unit?"
        TextBase:
            id:organ

            hint_text:"example: <Org.Kivy>"

        Lb_space:
        Label:
            text: "What is the name of your organization?"
        TextBase:
            id: enpres

            hint_text:"example: <Un.Kivy.br_group watts>"

        Lb_space:
        Label:
            text: "What is the name of your City or Locality?"
        TextBase:
            id: city
            hint_text:"example: <São Paulo>"

        Lb_space:
        Label:
            text: "What is the name of your State or Province?"
        TextBase:
            id:municip
            hint_text:"example: <São Paulo>"

        Lb_space:
        Label:
            text: "What is the two-letter country code for this unit?"
        TextBase:
            id:pais
            hint_text:"example: <BR>"


        BoxLayout:
            padding:03

            orientation: "horizontal"

            Button:
                text: "EXIT"
                on_release:
                    #app.keypath = ("")
                    #app.alias = ("")
                    #app.name_key = ("")
                    #app.storepass =("")
                    #app.keypass = ("")
                    #app.validity =("")
                    #app.root.pop_dism()

            Button: 
                text: "CREATE KEY"
                on_release:

                    #adiciona a lista parametros passados pelo usuário
                    app.data_key = [str(nome.text), str(organ.text),
                    str(enpres.text), str(city.text), str(municip.text),
                    str(pais.text)]

                    #informa para função que cria a chave dados contidos em duas listas
                    app.root.create_key(x = app.par_creatkey, y = app.data_key)

                    #parametro bool para informar se chave foi gerada
                    app.keystore_ok = True
                    app.root.pop_dism(x=2)
